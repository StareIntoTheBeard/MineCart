<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product_core.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product_core.description %>
</p>

<p>
  <b>Active:</b>
  <%= @product_core.active %>
</p>

<p>
  <b>Price:</b>
  <%= @product_core.price %>
</p>

<p>
  <b>Sku:</b>
  <%= @product_core.sku %>
</p>

