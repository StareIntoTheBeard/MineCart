<%= form_for [@store, @product_core] do |f| %>
  <% if @product_core.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_core.errors.count, "error") %> prohibited this product_core from being saved:</h2>

      <ul>
      <% @product_core.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @switch  %>
    <div class="field">
      <%= f.label :sku %><br />
      <%= f.text_field :sku %>
    </div>  
  <% else %>
  <div class=="field">
      <%= f.label :sku %><br />
      <%= @product_core.sku %>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>

  <% if @switch %>
    <div class="field">
      <%= f.label :applytoall, "Apply changes to all instances?" %>
      <%= f.check_box :applytoall, :checked => false %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
