<% @shelves.each do |shelf| %>
  <tr>
    <td><%= shelf.name %></td>
    <td><%= shelf.description %></td>
    <td><%= shelf.currency %></td>
    <td><%= shelf.language %></td>
    <td><%# link_to 'Show', store_shelf_path %></td>
    <td><%= link_to 'Edit', edit_store_shelf_path(@storeid, shelf) %></td>
    <td><%# link_to 'Destroy', shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

