<h1>Listing product_instances</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Image</th>
    <th>Active</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_instances.each do |product_instance| %>
  <tr>
    <td><%= product_instance.description %></td>
    <td><%= product_instance.image %></td>
    <td><%= product_instance.active %></td>
    <td><%= product_instance.price %></td>
    <td><%= link_to 'Show', product_instance %></td>
    <td><%= link_to 'Edit', edit_product_instance_path(product_instance) %></td>
    <td><%= link_to 'Destroy', product_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

