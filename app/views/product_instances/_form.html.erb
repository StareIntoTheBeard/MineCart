<%= form_for([@category, @product_instance]) do |f| %>
  <% if @product_instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_instance.errors.count, "error") %> prohibited this product_instance from being saved:</h2>

      <ul>
      <% @product_instance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Product Title:<br>
    <%= @coreinfo.name %>
  </div>

  <div class="field">
    Product SKU:<br>
    <%= @coreinfo.sku %>
    <%= f.hidden_field :sku, :value => @form.sku %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :value => @form.description %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image, :value => @form.image %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price, :value => @form.price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
