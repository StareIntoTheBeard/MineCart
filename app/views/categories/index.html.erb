<h1>Listing categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.title %></td>
    <td><%= category.description %></td>
    <td><%= link_to 'Show', store_shelf_category_path(@shelf.store,@shelf,category) %></td>
    <td><%= link_to 'Edit', edit_store_shelf_category_path(@shelf.store,@shelf,category) %></td>
    <td><%= link_to 'Destroy', store_shelf_category_path(@shelf.store, @shelf, category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

